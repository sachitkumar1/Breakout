package Breakout;
import java.awt.Rectangle;
import java.awt.event.KeyEvent;

import Utilities.GDV5;
public class Paddle extends Rectangle {

	//paddle dimensions parameters
	public Paddle(int x, int y, int width, int height) {
		super(x,y,width,height);}
	
	//Moving paddle with arrows
	public void MoveArrows() {
		//Right arrow or H
		if((GDV5.KeysPressed[KeyEvent.VK_RIGHT]||GDV5.KeysPressed[KeyEvent.VK_H])&&this.getX()<= GDV5.getMaxWindowX()- 150) {
			this.x +=10;}
		
		//Left arrow or K
		if ((GDV5.KeysPressed[KeyEvent.VK_LEFT]||GDV5.KeysPressed[KeyEvent.VK_K])&& this.getX() >= 20){
			this.x-=10;}}
	
	//Moving paddle with A and D keys
	public void MoveWASD() {
		//A
		if(GDV5.KeysPressed[KeyEvent.VK_A] && this.getX() >= 20) {
			this.x -=10;}
		
		//A
		if (GDV5.KeysPressed[KeyEvent.VK_D] && this.getX()<= GDV5.getMaxWindowX()- 150) {
			this.x+=10;}}
	
//enlargens paddle for paddle enlarging powerup
public void enlargen() {
		if(this.width <= 160) {
		this.width += 30;}}


public void setWidth(int n) {
	this.width = n;
}}
	
	

